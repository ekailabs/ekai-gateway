{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": false,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "shared/*": ["../shared/*"]
    },
    "types": ["vitest/globals"]
  },
  "include": ["src/**/*", "../shared/**/*", "tests/**/*", "vitest.d.ts"],
  "exclude": ["node_modules", "dist"]
}